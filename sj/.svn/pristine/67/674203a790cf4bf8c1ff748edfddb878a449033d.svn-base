<script>
var treeObj;
var key = null,nodeList=[];
var id = null;
var selecttype;
var setting = {
	view:{
		expandSpeed:100,
		selectedMulti : false,
		fontCss:function(treeId, treeNode) {
			return (!!treeNode.highlight) ? {"font-weight":"bold","color":"red"} : {"font-weight":"normal","color":"#333"};
		}
	},

	data : {
		simpleData : {
			enable : true,
			idKey : 'id',
			pIdKey :'parentId'
		},
		key:{
			name:"name"
		}
	},
	callback: {
		onClick: onClickNode
	}
};


var loadWay = "buzLine";
$(function(){
	loadByBuzLine();
	//加载审计专项树

	//加载审计专项树xfg
	
	key = $("#search-input");
	$("#riskLevel-select").chosen({width: "120px",disable_search_threshold:10});
	$("#dealStatus-select").chosen({width: "120px",disable_search_threshold:10});

	$('#change_tree').removeAttr('checked').on('click', function(){
		if(this.checked) {
			loadByBuzOrg();
			loadWay = "org";
		}
		else {
			loadByBuzLine();
			loadWay = "buzLine";
		}
	})
	
	$("#search-btn").on("click",function(e){
		treeObj.cancelSelectedNode();
		searchNode(e);
	})

})


 $("#riskLevel-select").chosen({width: "100px",disable_search_threshold:10});
 $("#status-select").chosen({width: "100px",disable_search_threshold:10});

function searchNode(e) {
	// 取得输入的关键字的值
	var value = $.trim(key.get(0).value);
	// 按名字查询
	var	keyType = "name";
	if (key.hasClass("empty")) {
		value = "";
	}

	// 如果要查空字串，就退出不查了。
	if (value === "") {
		return;
	}
	updateNodes(false);
	if(loadWay == "buzLine"){
		nodeList = treeObj.getNodesByParamFuzzy(keyType, value);
		var type = "";
		$.each(nodeList,function(i,obj){
			type = (type + obj.id) + (((i + 1)== nodeList.length) ? '':','); 
		})
		loadData(type);
	}
	if(loadWay == "org"){
		nodeList = treeObj.getNodesByParamFuzzy(keyType, value);
		var organId = "";
		$.each(nodeList,function(i,obj){
			organId = (organId + obj.id) + (((i + 1)== nodeList.length) ? '':','); 
		})
		loadData(type);
	}
	updateNodes(true);
}

function updateNodes(highlight) {
	for(var i=0, l=nodeList.length; i<l; i++) {
		nodeList[i].highlight = highlight;
		treeObj.updateNode(nodeList[i]);
		treeObj.expandNode(nodeList[i].getParentNode(), true, false, false);
	}
}


function onClickNode(e, treeId, treeNode){
	if(treeNode.id == 0){
		loadData(0);
	}else{
		if(treeNode.isParent){
			organId = treeNode.id;
			organId = getAllChildrenNodes(treeNode,organId);
	     }else{
	    	 organId=treeNode.id;
	     }
		loadOrgan(organId);
	}
}

//使用了递归，得到叶子节点的数据
function getAllChildrenNodes(treeNode,result){ 
    if (treeNode.isParent) { 
      var childrenNodes = treeNode.children; 
      if (childrenNodes) { 
          for (var i = 0; i < childrenNodes.length; i++) { 
           if(childrenNodes[i].isParent){
        	result += ',' + childrenNodes[i].id; 
            result = getAllChildrenNodes(childrenNodes[i], result); 
           }else{
            result += ',' + childrenNodes[i].id; 
           }
          } 
      } 
  } 
  return result; 
}

$(function(){
	var $table = $('#table');
    $table.bootstrapTable({
    	iconSize:'sm',
		pagination:true,
		method:"post",
		toolbar:"#toolbar",
		pageSize:10,
		queryParamsType:'limit',
		striped:true,
		pageNumber:1,
		sidePagination:'server',
		url:'${ctxPath}/risk/detection/list1?'+$("#search-form").serialize()
    });
})

function loadData(type){
	selecttype = type;
	$('#table').bootstrapTable("refresh",{url:"${ctxPath}/risk/detection/list1?"+"&type="+type})
}

function loadOrgan(organId){
	if(organId == 999999 ){
		$('#table').bootstrapTable("refresh",{url:"${ctxPath}/risk/detection/list?"+"&property="+property})
	}else{
		$('#table').bootstrapTable("refresh",{url:"${ctxPath}/risk/detection/list?"+"&property="+property+"&organId="+organId})
	}
		
}



function loadByBuzOrg(){
	$.ajax({
		url: "${ctxPath}/office/tree",
		method:"post",
		dataType: "json",
		async: false,
		success: function(data) {
			var treeData = [];
			$.each(data,function(i,obj){
				treeData.push(obj);
			})

			$.fn.zTree.init($("#ztree"), setting, treeData);
			treeObj = $.fn.zTree.getZTreeObj("ztree");

			var nodes = treeObj.getNodesByParam("level", 1);
			for(var i=0; i<nodes.length; i++) {
				treeObj.expandNode(nodes[i].getParentNode(), true, false, false);
			}
		}
	});
}

var zTreeNodes;
function loadByBuzLine(){
	nodeList=[]; //清除缓存
	var treeData = ${treeList};
		
	var root = {id:0,name:"模型专题分类列表",open:true};
	treeData[treeData.length] = root;
	
	$.fn.zTree.init($("#ztree"), setting,treeData);
	treeObj = $.fn.zTree.getZTreeObj("ztree");
}

function modelNameFormatter(value,row,index){
	return ' <a  href="javascript:void(0);"'+
			' data-mode="detail" data-title="'+value+'    详细"'+
			' data-url="${ctxPath}/model/base/detail/showlayer?id='+row.id+ '"'+
			'data-width="50%"'+
			'data-data="{id:41}" >'+
			value +
			'</a>';

}

$("#ok").click(function(){
	var params = jQuery("#search-form").serialize(); 
	params = decodeURIComponent(params,true);
	params = encodeURI(encodeURI(params));
	$('#table').bootstrapTable("refresh",{url:"${ctxPath}/risk/detection/list1?"+params+"&type="+selecttype})
}); 



</script>