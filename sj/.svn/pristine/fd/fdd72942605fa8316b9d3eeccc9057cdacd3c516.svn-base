<div id="toolbar">

	<form method="post" class="form-search" id="search-form" >
		<input type="hidden" name="property" value="3">
		<div class="form-inline" role="form">
			<div class="form-group">
				<span>业务条线</span>
				@var buzLines = dict.getDictListByType("model_buz_line");
				<#select name="buzLine" id="buzline-chosen" width="120px" class="form-control w70">
					<option value="">全部</option>
					@for(item in buzLines){
						<option value="${item.value!}">
						${item.label!}
						</option>
					@}
				</#select>
			</div>
			<div class="form-group">
				<span>模型名称</span>
				<input name="name" class="form-control w70" type="text" >
			</div>
			<div class="form-group">
				<span>运行时间</span>
				<input name="lastRunDateStart" class=" Wdate form-control w70" type="text" 
						id="startDate" onFocus="WdatePicker({maxDate: '#F{$dp.$D(\'endDate\')||\'2020-10-01\'}' })">
				<input name="lastRunDateEnd" class="form-control w70" type="text" 
						id="endDate" onFocus="WdatePicker({minDate: '#F{$dp.$D(\'startDate\')||\'%y-%M-%d\'}' ,maxDate:'2020-10-01' })"	>
			</div>
			<div class="form-group">
				<span>风险级别</span>
				 @var risks = dict.getDictListByType("model_risk_level");
				<#select name ="riskLevel" id="riskLevel-chosen" width="120px" class="form-control w70">
					<option value="">全部</option>
					@for(item in risks){
						<option value="${item.value!}">
						${item.label!}
						</option>
					@}
				</#select>
			</div>
			<div class="form-group">
				<span>客户编号</span>
				<input id="custNo" name="custNo" class="form-control w70" type="text" >
			</div>
			<div class="form-group">
				<span>处理状态</span>
				 @var status = dict.getDictListByType("data_deal_status");
				<#select name="dealStatus" id="status-chosen" width="120px" class="form-control w70">
					<option value="">全部</option>
					@for(item in status){
						<option value="${item.value!}">
						${item.label!}
						</option>
					@}
				</#select>
			</div>
			<div class="form-group">
				<span>机构编号</span>
				<input id="organId" name="organId" class="form-control w70" type="text" >
			</div>
			<input id="ok" type="button"  onclick = "query()" class="btn btn-primary btn-sm" value="查询"/>
		</div>
	</form>
</div>

<div id="rowBtn_edit" style="display: none;">
	<div class="hidden-sm hidden-xs action-buttons">
		<a class="green" href="javascript:void(0);" title="详细"
		   data-mode="tableDetails" data-title="详细"
		   data-url="${ctxPath}/data/queryHeaders"
		   data-width="80%"
		   data-data="{modelId:'{row.id}'}"
		   data-table = "table"
				>
			<i class="ace-icon fa fa-list bigger-130"></i>
		</a>
	</div>
</div>


<script>
	var property = 3;
	var loadWay = "buzLine"
	var treeObj;
	var key = null,nodeList=[];
	var id = null;
	var setting = {
		view:{
			expandSpeed:100,
			selectedMulti : false,
			fontCss:function(treeId, treeNode) {
				return (!!treeNode.highlight) ? {"font-weight":"bold","color":"red"} : {"font-weight":"normal","color":"#333"};
			}
		},
		data : {
			simpleData : {
				enable : true,
				idKey : 'id',
				pIdKey :'parentId',
				rootPid: 0
			},
			key:{
				name:"name"
			}
		},
		callback: {
			onClick: onClickNode
		}
	};
	
	$(function(){
		loadByBuzLine();
		key = $("#search-input");
		$("#search-btn").on("click",function(e){
			treeObj.cancelSelectedNode();
			searchNode(e);
		})
		$("#riskLevel-select").chosen({width: "120px",disable_search_threshold:10});
		$("#dealStatus-select").chosen({width: "120px",disable_search_threshold:10});


		$('#change_tree').removeAttr('checked').on('click', function(){
			if(this.checked) {
				loadByBuzOrg();
				loadWay = "org";
			}
			else {
				loadByBuzLine();
				loadWay = "buzLine";
			}
		})

	})


	function searchNode(e) {
		// 取得输入的关键字的值
		var value = $.trim(key.get(0).value);

		// 按名字查询
		var	keyType = "name";
		if (key.hasClass("empty")) {
			value = "";
		}

		if (key.hasClass("empty")) {
			value = "";
		}

		// 如果要查空字串，就退出不查了。
		if (value === "") {
			return;
		}
		updateNodes(false);
		if(loadWay == "buzLine"){
			nodeList = treeObj.getNodesByParamFuzzy(keyType, value);
			var buzlines = "";
			$.each(nodeList,function(i,obj){
				buzlines = (buzlines + obj.value) + (((i + 1)== nodeList.length) ? '':','); 
			})
			loadData(buzlines);
		}
		if(loadWay == "org"){
			nodeList = treeObj.getNodesByParamFuzzy(keyType, value);
			var organId = "";
			$.each(nodeList,function(i,obj){
				organId = (organId + obj.id) + (((i + 1)== nodeList.length) ? '':','); 
			})
			loadOrgan(organId);
		}
		updateNodes(true);
	}

	function updateNodes(highlight) {
		for(var i=0, l=nodeList.length; i<l; i++) {
			nodeList[i].highlight = highlight;
			treeObj.updateNode(nodeList[i]);
			treeObj.expandNode(nodeList[i].getParentNode(), true, false, false);
		}
	}


	function onClickNode(e, treeId, treeNode){
		if(treeNode.type == "buzline"){
			if(treeNode.id == 0){
				loadData(0);
			}else{
				loadData(treeNode.value);
			}
		}else{
			if(treeNode.isParent){
				organId = treeNode.id;
				organId = getAllChildrenNodes(treeNode,organId);
		     }else{
		    	 organId=treeNode.id;
		     }
			loadOrgan(organId);
		}
	}
	
	//使用了递归，得到叶子节点的数据
	function getAllChildrenNodes(treeNode,result){ 
	    if (treeNode.isParent) { 
	      var childrenNodes = treeNode.children; 
	      if (childrenNodes) { 
	          for (var i = 0; i < childrenNodes.length; i++) { 
	           if(childrenNodes[i].isParent){
	        	result += ',' + childrenNodes[i].id; 
	            result = getAllChildrenNodes(childrenNodes[i], result); 
	           }else{
	            result += ',' + childrenNodes[i].id; 
	           }
	          } 
	      } 
	  } 
	  return result; 
	}
	
	$(function(){
		var $table = $('#table');
	    $table.bootstrapTable({
	    	iconSize:'sm',
			pagination:true,
			method:"post",
			toolbar:"#toolbar",
			pageSize:10,
			queryParamsType:'limit',
			striped:true,
			pageNumber:1,
			sidePagination:'server',
			url:'${ctxPath}/risk/detection/list?'+$("#search-form").serialize()+"&property="+property
	    });
	})

	function loadData(buzName){
		if(buzName == 0 ){
			$('#table').bootstrapTable("refresh",{url:"${ctxPath}/risk/detection/list?"+"&property="+property})
		}else{
			$('#table').bootstrapTable("refresh",{url:"${ctxPath}/risk/detection/list?"+"&property="+property+"&buzLine="+buzName})
		}
			
	}
	
	function loadOrgan(organId){
		if(organId == 999999 ){
			$('#table').bootstrapTable("refresh",{url:"${ctxPath}/risk/detection/list?"+"&property="+property})
		}else{
			$('#table').bootstrapTable("refresh",{url:"${ctxPath}/risk/detection/list?"+"&property="+property+"&organId="+organId})
		}
			
	}
	
	function loadByBuzOrg(){
		$.ajax({
			url: "${ctxPath}/office/tree",
			method:"post",
			dataType: "json",
			async: false,
			success: function(data) {
				var treeData = [];
				$.each(data,function(i,obj){
					treeData.push(obj);
				})

				$.fn.zTree.init($("#ztree"), setting, treeData);
				treeObj = $.fn.zTree.getZTreeObj("ztree");

				var nodes = treeObj.getNodesByParam("level", 1);
				for(var i=0; i<nodes.length; i++) {
					treeObj.expandNode(nodes[i].getParentNode(), true, false, false);
				}
			}
		});
	}
	
	
	var zTreeNodes;
	function loadByBuzLine(){
		$.ajax({
			url: "${ctxPath}/risk/detection/buzLine?property="+property,
			dataType: "json",
			async: false,
			success: function(data) {
				var treeData = [];
				$.each(data,function(i,obj){
					treeData.push(obj);
				})

				$.fn.zTree.init($("#ztree"), setting,treeData);
				treeObj = $.fn.zTree.getZTreeObj("ztree");
				treeObj.expandAll(true);
			}
		});
	}
	function modelNameFormatter(value,row,index){
		return ' <a  href="javascript:void(0);"'+
        ' data-mode="detail" data-title="'+value+'    详细"'+
        ' data-url="${ctxPath}/model/base/detail/showlayer"'+
        'data-width="70%"'+
        'data-data="{id:'+row.id+'}" >'+
         value +
    	'</a>';

	}

	$("#ok").click(function(){
		var params = jQuery("#search-form").serialize(); 
		params = decodeURIComponent(params,true);
		params = encodeURI(encodeURI(params));
		$('#table').bootstrapTable("refresh",{url:"${ctxPath}/risk/detection/list?"+params})
	}); 

	
</script>